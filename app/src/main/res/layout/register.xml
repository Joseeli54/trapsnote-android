<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16px"
    android:paddingLeft="16px"
    android:paddingRight="16px"
    android:paddingTop="16px"
    android:weightSum="1"
    >

    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:elevation="1dp"
        android:text=" Register"
        android:textColor="@android:color/background_light"
        android:textSize="36sp" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/tv_response"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:textColor="@android:color/background_light"
        android:background="@color/colorAccent"
        android:textAlignment="center"
        android:textSize="20sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.09"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimaryDark"
                android:hint="@string/hint_username"
                android:paddingLeft="16px"
                android:textColorHint="@color/colorAccent"
                android:inputType="textPersonName"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dp"
                android:background="@android:color/background_dark"
                android:visibility="visible" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.09"
                android:background="@color/colorPrimaryDark"
                android:hint="@string/hint_nombre"
                android:paddingLeft="16px"
                android:textColorHint="@color/colorAccent"
                android:inputType="textPersonName"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dp"
                android:background="@android:color/background_dark"
                android:visibility="visible" />

            <EditText
                android:id="@+id/et_last_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.09"
                android:background="@color/colorPrimaryDark"
                android:hint="@string/hint_last_nombre"
                android:paddingLeft="16px"
                android:textColorHint="@color/colorAccent"
                android:inputType="textPersonName"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dp"
                android:background="@android:color/background_dark"
                android:visibility="visible" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.09"
                android:background="@color/colorPrimaryDark"
                android:ems="10"
                android:hint="@string/hint_email"
                android:inputType="textEmailAddress"
                android:paddingLeft="16px"
                android:textColorHint="@color/colorAccent" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dp"
                android:background="@android:color/background_dark"
                android:visibility="visible" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.09"
                android:background="@color/colorPrimaryDark"
                android:ems="10"
                android:hint="@string/hint_password"
                android:inputType="textPassword"
                android:paddingLeft="16px"
                android:textColorHint="@color/colorAccent" />

            <TextView
                android:id="@+id/fechaNac"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.09"
                android:background="@color/colorAccent"
                android:paddingTop="5dp"
                android:text="Fecha de Nacimiento"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="22sp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilPlannedDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/etPlannedDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="false"
                        android:hint="Elegir Fecha de Nacimiento"
                        android:inputType="date"
                        android:maxLines="1"
                        android:textColorHint="@android:color/background_dark"
                        android:textAlignment="center"/>

                </LinearLayout>

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/guardar_registro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorUsers"
                android:text="@string/action_register"
                android:textColor="@android:color/background_light" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>