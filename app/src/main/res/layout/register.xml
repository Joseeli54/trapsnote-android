<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/libritos"
    android:orientation="vertical"
    android:paddingBottom="16px"
    android:paddingLeft="16px"
    android:paddingRight="16px"
    android:paddingTop="16px"
    android:weightSum="1"
    >

    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:elevation="1dp"
        android:text=" Register"
        android:textColor="@android:color/background_light"
        android:textSize="36sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:layout_marginTop="20dp"
        android:layout_weight="0.09"
        android:background="@color/colorPrimaryDark"
        android:hint="@string/hint_username"
        android:paddingLeft="16px"
        android:textColorHint="@android:color/background_dark" />

    <EditText
        android:id="@+id/et_name"
        android:background="@color/colorPrimaryDark"
        android:layout_weight="0.09"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:paddingLeft="16px"
        android:hint="@string/hint_nombre"
        android:textColorHint="@android:color/background_dark"
        />

    <EditText
        android:id="@+id/et_last_name"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:layout_marginTop="10dp"
        android:layout_weight="0.09"
        android:background="@color/colorPrimaryDark"
        android:hint="@string/hint_last_nombre"
        android:paddingLeft="16px"
        android:textColorHint="@android:color/background_dark" />

    <EditText
        android:id="@+id/et_email"
        android:layout_marginTop="10dp"
        android:layout_weight="0.09"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:ems="10"
        android:paddingLeft="16px"
        android:inputType="textEmailAddress"
        android:hint="@string/hint_email"
        android:textColorHint="@android:color/background_dark"
        />

    <EditText
        android:id="@+id/et_password"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="10dp"
        android:layout_weight="0.09"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingLeft="16px"
        android:hint="@string/hint_password"
        android:textColorHint="@android:color/background_dark"
        />

            <TextView
                android:id="@+id/fechaNac"
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:layout_weight="0.09"
                android:background="@mipmap/libros"
                android:paddingTop="5dp"
                android:layout_marginTop="10dp"
                android:text="Fecha de Nacimiento"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/dia"
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:layout_marginTop="10dp"
                android:layout_weight="0.09"
                android:textColor="@android:color/background_dark"
                android:background="@color/colorPrimaryDark"
                android:hint="@string/Dia"
                android:paddingLeft="16px"/>

            <EditText
                android:id="@+id/mes"
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/background_dark"
                android:layout_weight="0.09"
                android:background="@color/colorPrimaryDark"
                android:hint="@string/Mes"
                android:paddingLeft="16px"/>

            <EditText
                android:id="@+id/year"
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:textColor="@android:color/background_dark"
                android:layout_marginTop="10dp"
                android:layout_weight="0.09"
                android:background="@color/colorPrimaryDark"
                android:hint="@string/Year"
                android:paddingLeft="16px"/>

            <Button android:background="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/action_register"
        android:id="@+id/guardar_registro"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/tv_response"
                android:layout_weight="0.10"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                android:textColor="@android:color/background_light"
                android:background="@android:color/background_dark"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
